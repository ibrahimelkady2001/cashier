<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cashier.AddEmployeePage"
             Title="إضافة موظف جديد"
             FlowDirection="RightToLeft"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <!-- نسخ الموارد لضمان تناسق التصميم -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryGradientStart">#1E3A8A</Color>
            <Color x:Key="PrimaryGradientEnd">#3B82F6</Color>
            <Color x:Key="PageBackgroundColor">#F0F4F8</Color>
            <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
            <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
            <Color x:Key="SecondaryTextColor">#4B5563</Color>
            <Color x:Key="BorderColor">#D1D5DB</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <!-- حقل اسم الموظف -->
            <Label Text="اسم الموظف" FontAttributes="Bold" TextColor="{StaticResource SecondaryTextColor}"/>
            <Border Stroke="{StaticResource BorderColor}" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="5,0" BackgroundColor="{StaticResource CardBackgroundColor}">
                <Entry x:Name="EmployeeNameEntry" Placeholder="مثال: أحمد خالد" Text="{Binding NewEmployee.EmployeeName,Mode = TwoWay}" />
            </Border>

            <!-- حقل الراتب -->
            <Label Text="الراتب الشهري" FontAttributes="Bold" TextColor="{StaticResource SecondaryTextColor}"/>
            <Border Stroke="{StaticResource BorderColor}" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="5,0" BackgroundColor="{StaticResource CardBackgroundColor}">
                <Entry Placeholder="مثال: 5000" Keyboard="Numeric" Text="{Binding NewEmployee.Salary,Mode = TwoWay}" />
            </Border>

            <!-- حقل المبلغ المستحق (السلفة) -->
            <Label Text="المبلغ المستحق (إن وجد)" FontAttributes="Bold" TextColor="{StaticResource SecondaryTextColor}"/>
            <Border Stroke="{StaticResource BorderColor}" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="5,0" BackgroundColor="{StaticResource CardBackgroundColor}">
                <Entry Placeholder="0.00" Keyboard="Numeric" Text="{Binding NewEmployee.OwedMoney,Mode = TwoWay}" />
            </Border>

            <!-- حقل يوم استلام الراتب -->
            <Label Text="يوم استلام الراتب" FontAttributes="Bold" TextColor="{StaticResource SecondaryTextColor}"/>
            <Grid ColumnDefinitions="*, Auto" BackgroundColor="{StaticResource CardBackgroundColor}" Padding="10" >
                <Border Stroke="{StaticResource BorderColor}" StrokeThickness="1" StrokeShape="RoundRectangle 10" Grid.ColumnSpan="2"/>
                <Label Text="{Binding Source={x:Reference MoneyDayStepper}, Path=Value, StringFormat='يوم {0}'}"
                       VerticalOptions="Center"
                       FontSize="16"/>
                <Stepper x:Name="MoneyDayStepper"
                         Grid.Column="1"
                         Minimum="1"
                         Maximum="31"
                         Increment="1"
                         Value="{Binding NewEmployee.MoneyDay}" />
            </Grid>

            <!-- أزرار الحفظ والإلغاء -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="حفظ"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="25"
                        Clicked="OnSaveButtonClicked">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,0">
                            <GradientStop Color="{StaticResource PrimaryGradientStart}" Offset="0.0" />
                            <GradientStop Color="{StaticResource PrimaryGradientEnd}" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button Grid.Column="1"
                        Text="إلغاء"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="25"
                        BackgroundColor="{StaticResource CardBackgroundColor}"
                        TextColor="{StaticResource SecondaryTextColor}"
                        BorderColor="{StaticResource BorderColor}"
                        BorderWidth="1"
                        Clicked="OnCancelButtonClicked"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>